<div class="sign-in">
  <div class="sign-in-header">
    <h1 class="sign-in-title">Sign in</h1>
  </div>

    <div class='form-wrap'>
      <%= form_with model: @user, url: new_user_session_path, class: 'session-main', local: true do |f| %>
        <div class='login-flash-message'>
        <% if flash.alert.present? %>
          <p id="alert"><%= flash[:alert] %></p>
        <% end %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"Email", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"Password", minlength:"6", autofocus: true %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <%= f.submit "Sign In" ,class:"session-btn" %>

      <% end %>
    <div>

</div>